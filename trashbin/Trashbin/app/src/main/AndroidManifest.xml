<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hearc.gcapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ch.hearc.gcapp.garbages.activities.GarbageListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ch.hearc.gcapp.garbages.activities.AddGarbageActivity" />
        <activity android:name="ch.hearc.gcapp.garbages.categories.activities.ChooseGarbageCategoryActivity" />
        <activity android:name="ch.hearc.gcapp.garbages.categories.activities.AddGarbageCategoryActivity" />
        <activity android:name="ch.hearc.gcapp.garbages.activities.GarbageDetailsActivity"></activity>

    </application>

</manifest>